<br>
<div class="container">
<div class="card">
	<div class="card-header">
		<h5>Seleccione estacion a modificar</h5>
	</div>
	<div class="card-body">
		<form action="/estacion/modificar" method="POST">
				<div class="form-group">
				<label for="id">Estaciones</label>
				<select name="id" id="id" class="custom-select">
					<% @objestacion.each do |item| %>
					<option value=<%= item[0] %>><%= item[1].nombre %></option>
					<% end %>
				</select>
				</div>
				<div class="form-group">
					<button class="btn btn-success" type="submit">Enviar</button>
				</div>
			</form>
			</div>
				</div>
</div>