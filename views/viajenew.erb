<script type="text/javascript">
$(function () {
	$('.clockpicker').clockpicker();
	       });	
</script> 

	<div class="container">
		<div class="card">
			<div class="card-header">
				<h5></h5>
			</div>
			<div class="card-body">
				<form action="/viaje/nuevo" method="POST">
					<div class="container">
						<div class="row">
							<div class="col-sm-3">
								<div class="form-group">
	        						<label for="rdate">Fecha de retiro</label>
	           						<input type='date' name="rdate" class="form-control" id='datepicker' format="dd/MM/yyyy" placeholder="dd/mm/YYYY" required />
	           					</div>
							</div>
							<div class="col-sm-3">
								<div class="form-group">
	        						<label for="rtime">Hora de retiro</label>
	        						<div class="input-group clockpicker" data-placement="left" data-align="top" data-autoclose="true">
	           							<input type='time' name="rtime" class="form-control" id='timeformat' placeholder="HH:MM" required />
	           							<span class="input-group-addon">
	        								<span class="glyphicon glyphicon-time"></span>
	    								</span>
	    							</div>
	    						</div>
							</div>
						</div>
	    				<div class="form-group">
							<label for="dret">Origen</label>
							<select name="dret" id="dret" class="custom-select">
							<% @objestacion.each do |item| %>
								<option value=<%= item[0] %>><%= item[1].nombre %></option>
								<% end %>
							</select>
						</div>
						<div class="form-group">
							<label for="dest">Destino</label>
							<select name="dest" id="dest" class="custom-select">
							<% @objestacion.each do |item| %>
								<option value=<%= item[0] %>><%= item[1].nombre %></option>
								<% end %>
							</select>
						</div>
						<div class="form-group">
							<label for="user">Usuarios (Nombre - Apellido)</label>
							<select name="user" id="user" class="custom-select">
							<% @objusuario.each do |item| %>
								<option value=<%= item[0] %>><%= item[1].nombre + " " + item[1].apellido %> </option>
							<% end %>
							</select>
						</div>
						<div class="form-group">
							<label for="duracion">Tiempo de Uso</label>
	           				<input type='time' name="duracion" class="form-control" id='duracion'required step="1"/>
	           			</div>
						<div class="form-group">
							<button class="btn btn-success" type="submit">Enviar</button>	
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
