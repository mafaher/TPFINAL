<div class="container">
<div class="card">
	<div class="card-header">
		<h5>Modifique usuario: </h5>
	</div>
	<div class="card-body">
		<form action="/usuario/modificar/<%= @id %>" method="POST">
				<div class="container">
				<div class="form-group">
				<label for="name">Nombre</label>
				<input type="text" name="name" class="form-control" id="name" placeholder="Nombre" required=true value=<%= @objusuarioA.nombre %>>
				</div>
				<div class="form-group">
				<label for="surname">Apellido</label>
				<input type="text" name="surname" class="form-control" id="surname" placeholder="Apellido" required=true value=<%= @objusuarioA.apellido %>>
				</div>
				<div class="form-group">
				<label for="sexo">Genero</label>				<select name="sexo" id="sexo" class="custom-select" value=<%= @objusuarioA.sexo %>>
					<option value="M">Masculino</option>
					<option value="F">Femenino</option>
					<option value="N">N/A</option>
				</select>
				</div>
				<div class="form-group">
				<label for="edad">Edad</label>
					<input type="number" name="edad" class="form-control" id="edad" placeholder="Edad" max="100" min="0" value=<%= @objusuarioA.edad %>>
				</div>
				<input type="text" hidden=true id="fcreacion" name="fcreacion" value=<%= @objusuarioA.fechacreacion %>>
				<div class="form-group">
				<button class="btn btn-success" type="submit">Enviar</button>	
				</div>
			</div>
			</form>
				</div>
</div>
</div>